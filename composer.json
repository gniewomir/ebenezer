{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "6.1.*",
        "symfony/dotenv": "6.1.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.1.*",
        "symfony/runtime": "6.1.*",
        "symfony/yaml": "6.1.*"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Enraged\\Ebenezer\\": "src/Enraged/Ebenezer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Enraged\\Ebenezer\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "@quality:architecture:deptrac:check",
            "@quality:codestandard:php-cs-fixer:check",
            "@quality:code:psalm:check"
        ],
        "fix": [
            "@quality:codestandard:php-cs-fixer:fix"
        ],
        "fix:risky": [
            "@quality:codestandard:php-cs-fixer:fix:risky"
        ],
        "quality:codestandard:php-cs-fixer:check": [
            "PHP_CS_FIXER_RISKY=1 php bin/php-cs-fixer.phar fix --dry-run"
        ],
        "quality:codestandard:php-cs-fixer:fix": [
            "PHP_CS_FIXER_RISKY=0 php bin/php-cs-fixer.phar fix"
        ],
        "quality:codestandard:php-cs-fixer:fix:risky": [
            "PHP_CS_FIXER_RISKY=1 php bin/php-cs-fixer.phar fix"
        ],
        "quality:architecture:deptrac:check": [
            "php bin/deptrac.phar analyse --config-file=deptrac.yml"
        ],
        "quality:code:psalm:check": [
            "php bin/psalm.phar"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.1.*"
        }
    }
}
